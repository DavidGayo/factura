{% extends '::base.html.twig' %}

{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="panel-title">Ver Tipo Producto</span>
        </div>

        <div class="panel-body">

            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12 col-lg-2">
                        <p><b>Tipo producto</b></p>
                    </div>

                    <div class="col-xs-12 col-lg-2">
                        {{ entity.tipoProducto }}
                    </div>
                </div>
            </div>
        </div>    
     

        <div class="panel-footer">
            <div class="inline">  
                <a href="{{ path('tipoproducto_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
                <a class="btn btn-warning" href="{{ path('tipoproducto') }}"><i class="fa fa-arrow-left"></i>&nbsp;Regresar</a><br /><br />        
                        {{ form(delete_form) }}  
            </div>
        </div>       
    </div>
        
{% endblock %}
{% block js %}
<script src="{{ asset('bundles/app/vendor/plugins/sparkline/jquery.sparkline.min.js') }}"></script>
<script src="{{ asset('bundles/app/vendor/plugins/highcharts/highcharts.js') }}"></script>
<script src="{{ asset('bundles/app/vendor/plugins/circles/circles.js') }}"></script>
<script src="{{ asset('bundles/app/assets/js/demo/charts/highcharts.js') }}"></script>
{% endblock %}
