{% extends '::base.html.twig' %}

{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="panel-title">Moneda list</span>
        </div>

        <div class="panel-body">
            <a href="{{ path('moneda_new') }}" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Nuevo</a>

            <div class="table-reponsive mt15">
                <table class="records_list table table-bordered mbn">
                    <thead>
                        <tr>
                            <th>Tipomoneda</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr class="odd gradeX">
                                <td>{{ entity.tipoMoneda }}</td>
                                <td>
                                    <a href="{{ path('moneda_show', { 'id': entity.id }) }}" class="btn btn-default"><i class="fa fa-eye"></i>&nbsp;Ver</a>
                                    
                                    <a href="{{ path('moneda_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i class="fa fa-pemcil">&nbsp;Editar</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
