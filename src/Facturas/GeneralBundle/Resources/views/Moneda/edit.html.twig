{% extends '::base.html.twig' %}

{% block body -%}
    <div class="panel panel-default">
    	<div class="panel-heading">
            <span class="panel-title">Editar Moneda</span>
        </div>

        <div class="panel-body">
            {{ form_start(edit_form) }}
                {{ form_errors(edit_form) }}

                <div class="form-group">
                	<label class="col-lg-3 control-label">Moneda</label>
                	<div class="col-lg-5 mb10">
                        {{ form_errors(edit_form.tipoMoneda) }}
                        {{ form_widget(edit_form.tipoMoneda, {'attr': {'class': 'form-control'}}) }}
                	</div>
                </div> 

                {{ form_widget(edit_form._token) }}

                <div class="col-xs-12">
					<button class="btn btn-primary" type="submit" id="sendform"><i class="fa fa-pencil"></i>&nbsp;Actualizar</button>
					<a class="btn btn-warning" href="{{ path('moneda') }}"><i class="fa fa-arrow-left">&nbsp;</i>Regresar</a>
					<button class="btn btn-danger" type="reset"><i class="fa fa-close"></i>&nbsp;Cancelar</button>
				</div>

    
{% endblock %}
