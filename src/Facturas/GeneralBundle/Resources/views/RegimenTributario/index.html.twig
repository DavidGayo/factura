{% extends '::base.html.twig' %}

{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="panel-title">Regimen Tributario</span>
        </div>

        <div class="panel-body">
            <a href="{{ path('regimentributario_new') }}" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Nuevo</a>

            <div class="table-responsive mt15">
            <table class="records_list table table-bordered mbn">
                <thead>
                        <tr>
                            <th>Regimentributario</th>
                            <th>Actions</th>
                        </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr class="odd gradeX">
                            <td>{{ entity.regimenTributario }}</td>
                            <td>
                                <a href="{{ path('regimentributario_show', { 'id': entity.id }) }}" class="btn btn-default"><i class="fa fa-eye"></i>&nbsp;Ver</a>
                                <a href="{{ path('regimentributario_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp;Editar</a>                   
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>
{% endblock %}
