{% extends '::base.html.twig' %}

{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="panel-title">E-mail</span>
        </div>
        <div class="panel-body">
            <a href="{{ path('email_new') }}" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Nuevo</a>
            <div class="table-responsive mt15">
                <table class="records_list table table-bordered mbn">
                    <thead>
                        <tr>
                            <th>Usuario</th>               
                            <th>Protocolo</th>
                            <th>Host</th>
                            <th>Puerto</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('email_show', { 'id': entity.id }) }}">{{ entity.usuario }}</a></td>
                                <td>{{ entity.protocolo }}</td>
                                <td>{{ entity.host }}</td>
                                <td>{{ entity.puerto }}</td>
                                <td>
                                    <a href="{{ path('email_show', { 'id': entity.id }) }}" class="btn btn-default"><i class="fa fa-eye"></i>&nbsp;Ver</a>
                                    
                                    <a href="{{ path('email_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>       
        </div>
    </div>
    {% endblock %}
