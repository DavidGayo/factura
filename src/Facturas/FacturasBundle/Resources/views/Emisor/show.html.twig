{% extends '::base.html.twig' %}

{% block body -%}
<pre>{{dump(entities)}}</pre>
  <div class="panel">
    <div class="panel-heading">
        <span class="panel-title">Ver Emisor</span>
    </div>
    <div class="panel-body">

        {% for entity in entities %}

        <div class="form-group">
            <div class="row">
                <div class="col-xs-12 col-lg-2">
                    <p><b>Razon Social:</b> </p>
                </div>
            <div>
            {{ entity.emisor.razonSocial }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>RFC:</b> </p>
        </div>
        <div>
            {{ entity.emisor.rfc }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Contribuyente:</b> </p>
        </div>
        <div>
            {{ entity.emisor.tipoContribuyente }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Giro:</b> </p>
        </div>
        <div>
            {{ entity.emisor.giro }}
        </div>
    </div>
</div>
<div class="form-group">
            <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Regimen Fiscal:</b> </p>
        </div>
        <div>
            {{ entity.emisor.regimenFiscal }}
        </div>
    </div>
</div>

<div class="form-group">
            <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Calle:</b> </p>
        </div>
        <div>
            {{ entity.calle }}
        </div>
    </div>
</div>

</div>
        
          

 <div class="panel-footer">
        <div class="inline">
            <a href="{{ path('emisor_edit', { 'id': entity.emisor.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
            <a class="btn btn-warning" href="{{ path('emisor') }}"><i class="fa fa-arrow-left">&nbsp;</i>Regresar</a><br /><br />
        </div>
    </div>

 {% endfor %} 

</div>
{% endblock %}
{% block js %}
<script src="{{ asset('bundles/app/vendor/plugins/sparkline/jquery.sparkline.min.js') }}"></script>
<script src="{{ asset('bundles/app/vendor/plugins/highcharts/highcharts.js') }}"></script>
<script src="{{ asset('bundles/app/vendor/plugins/circles/circles.js') }}"></script>
<script src="{{ asset('bundles/app/assets/js/demo/charts/highcharts.js') }}"></script>
{% endblock %}