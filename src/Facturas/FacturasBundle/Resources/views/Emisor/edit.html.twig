{% extends '::base.html.twig' %}

{% block body -%}
 <div class="panel">
	<div class="panel-heading">
		<span class="panel-title">Editar Emisor</span>
	</div>
	<div class="panel-body">
		{{ form_start(edit_form) }}
			{{ form_errors(edit_form) }}

	   				<div class="form-group">
	   					<div class="row">
						<label class="col-lg-3 control-label">Razon Social</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.razonSocial) }}
							{{ form_widget(edit_form.razonSocial, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">RFC</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.rfc) }}
							{{ form_widget(edit_form.rfc, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Contribuyente</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.tipoContribuyente) }}
							{{ form_widget(edit_form.tipoContribuyente, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Giro</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.giro) }}
							{{ form_widget(edit_form.giro, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Regimen Fiscal</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.regimenFiscal) }}
							{{ form_widget(edit_form.regimenFiscal, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>

			{{ form_widget(edit_form._token) }}
			
			<div class="col-xs-12">
				<button class="btn btn-primary" type="submit" id="sendform"><i class="fa fa-pencil"></i>&nbsp;Actualizar</button>
				<a class="btn btn-warning" href="{{ path('emisor') }}"><i class="fa fa-arrow-left">&nbsp;</i>Regresar</a>
			</div>

		</form>
	</div>
</div>
{% endblock %}
