{% extends '::base.html.twig' %}
{% block body -%}
    <div class="panel">
	<div class="panel-heading">
		<span class="panel-title">Nuevo Emisor</span>
	</div>
	<div class="panel-body">
		{{ form_start(form) }}
			{{ form_errors(form) }}

	   				<div class="form-group">
	   					<div class="row">
						<label class="col-lg-3 control-label">Razon Social</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.razonSocial) }}
							{{ form_widget(form.razonSocial, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">RFC</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.rfc) }}
							{{ form_widget(form.rfc, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Contribuyente</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.tipoContribuyente) }}
							{{ form_widget(form.tipoContribuyente, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Giro</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.giro) }}
							{{ form_widget(form.giro, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Regimen Fiscal</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.regimenFiscal) }}
							{{ form_widget(form.regimenFiscal, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>

			{{ form_widget(form._token) }}
			
			<div class="col-xs-12">
				<button class="btn btn-success" type="submit" id="sendform"><i class="fa fa-plus"></i>&nbsp;Crear</button>
				<a class="btn btn-warning" href="{{ path('emisor') }}"><i class="fa fa-arrow-left">&nbsp;</i>Regresar</a>
			</div>

		</form>
	</div>
</div>
{% endblock %}
