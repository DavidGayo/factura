{% extends '::base.html.twig' %}

{% block body -%}
  <div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">Direccion Emisor</span>
    </div>
    <div class="panel-body">
        <a href="{{ path('direccionemisor_new')}}" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Nuevo</a>
        <div id="nuevo"> 

        </div>

        <div class="table-responsive mt15">
            <table class="records_list table table-bordered mbn">
        <thead>
            <tr>
                <th>Calle</th>
                <th>Numero Ext</th>
                <th>Numero Int</th>
                <th>Colonia</th>
                <th>Localidad</th>
                <th>Codigopostal</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('direccionemisor_show', { 'id': entity.id }) }}">{{ entity.calle }}</a></td>
                <td>{{ entity.numeroExt }}</td>
                <td>{{ entity.numeroInt }}</td>
                <td>{{ entity.colonia }}</td>
                <td>{{ entity.localidad }}</td>
                <td>{{ entity.codigoPostal }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefono }}</td>
                <td>
                        <a href="{{ path('direccionemisor_show', { 'id': entity.id }) }}" class="btn btn-default"><i class="fa fa-eye"></i>&nbsp;Ver</a>
                   
                        <a href="{{ path('direccionemisor_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div><!-- table-responsive -->
    </div><!-- panel-body -->
</div><!-- panel -->

        
    {% endblock %}
