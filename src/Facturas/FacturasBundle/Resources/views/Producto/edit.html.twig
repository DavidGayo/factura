{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel">
	<div class="panel-heading">
		<span class="panel-title">Editar Producto</span>
	</div>
	<div class="panel-body">
		{{ form_start(edit_form) }}
			{{ form_errors(edit_form) }}

	   				<div class="form-group">
	   					<div class="row">
						<label class="col-lg-3 control-label">Codigo de Barras</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.codigoBarras) }}
							{{ form_widget(edit_form.codigoBarras, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
	   					<div class="row">
						<label class="col-lg-3 control-label">Clave</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.clave) }}
							{{ form_widget(edit_form.clave, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
	   					<div class="row">
						<label class="col-lg-3 control-label">Marca</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.marca) }}
							{{ form_widget(edit_form.marca, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
	   					<div class="row">
						<label class="col-lg-3 control-label">Unidad de Medida</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.unidadMedida) }}
							{{ form_widget(edit_form.unidadMedida, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
	   					<div class="row">
						<label class="col-lg-3 control-label">Precio Unitario</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.precioUnitario) }}
							{{ form_widget(edit_form.precioUnitario, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
	   					<div class="row">
						<label class="col-lg-3 control-label">Modelo</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.modelo) }}
							{{ form_widget(edit_form.modelo, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
	   					<div class="row">
						<label class="col-lg-3 control-label">Tipo Producto</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(edit_form.tipoProducto) }}
							{{ form_widget(edit_form.tipoProducto, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>

				{{ form_widget(edit_form._token) }}
			
			<div class="col-xs-12">
				<button class="btn btn-primary" type="submit" id="sendform"><i class="fa fa-pencil"></i>&nbsp;Actualizar</button>
				<a class="btn btn-warning" href="{{ path('producto') }}"><i class="fa fa-arrow-left">&nbsp;</i>Regresar</a>
			</div>

		</form>
	</div>
</div>
{% endblock %}
