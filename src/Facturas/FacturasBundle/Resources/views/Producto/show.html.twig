{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel">
    <div class="panel-heading">
        <span class="panel-title">Ver Producto</span>
    </div>
    <div class="panel-body">

        <div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Codigo de Barras:</b> </p>
        </div>
        <div>
            {{ entity.codigoBarras }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Clave:</b> </p>
        </div>
        <div>
            {{ entity.clave }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Marca:</b> </p>
        </div>
        <div>
            {{ entity.marca }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Unidad de Medida:</b> </p>
        </div>
        <div>
            {{ entity.unidadMedida }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Precio Unitario:</b> </p>
        </div>
        <div>
            {{ entity.precioUnitario }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Modelo:</b> </p>
        </div>
        <div>
            {{ entity.modelo }}
        </div>
    </div>
</div>

</div>
        
          

 <div class="panel-footer">
        <div class="inline">
            <a href="{{ path('producto_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
            <a class="btn btn-warning" href="{{ path('producto') }}"><i class="fa fa-arrow-left">&nbsp;</i>Regresar</a><br /><br />
             {{ form(delete_form) }}
        </div>
    </div>
    
       

</div>
{% endblock %}
