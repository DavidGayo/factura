{% extends '::base.html.twig' %}

{% block body -%}
  <div class="panel">
	<div class="panel-heading">
		<span class="panel-title">Nuevo Contacto</span>
	</div>
	<div class="panel-body">
		{{ form_start(form) }}
			{{ form_errors(form) }}

	   				<div class="form-group">
	   					<div class="row">
						<label class="col-lg-3 control-label">Nombre</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.nombre) }}
							{{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Apellido Paterno</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.apePat) }}
							{{ form_widget(form.apePat, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Apellido Materno</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.apeMat) }}
							{{ form_widget(form.apeMat, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Email</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.email) }}
							{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Nextel</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.nextel) }}
							{{ form_widget(form.nextel, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Telefono 1</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.telefono1) }}
							{{ form_widget(form.telefono1, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Telefono 2</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.telefono2) }}
							{{ form_widget(form.telefono2, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Celular</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.celular) }}
							{{ form_widget(form.celular, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Cliente</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.cliente) }}
							{{ form_widget(form.cliente, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>

			{{ form_widget(form._token) }}
			
			<div class="col-xs-12">
				<button class="btn btn-success" type="submit" id="sendform"><i class="fa fa-plus"></i>&nbsp;Crear</button>
				<a class="btn btn-warning" href="{{ path('contacto') }}"><i class="fa fa-arrow-left">&nbsp;</i>Regresar</a>
			</div>

		</form>
	</div>
</div>
   
{% endblock %}
