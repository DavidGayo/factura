{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">Contacto</span>
    </div>
    <div class="panel-body">
        <a href="{{ path('contacto_new') }}" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Nuevo</a>

        <div class="table-responsive mt15">
            <table class="records_list table table-bordered mbn">
        <thead>
            <tr>
             
                <th>Nombre</th>
                <th>Apellido paterno</th>
                <th>Apellido materno</th>
                <th>Email</th>
                <th>Nextel</th>
                <th>Telefono1</th>
                <th>Telefono2</th>
                <th>Celular</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contacto_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                <td>{{ entity.apePat }}</td>
                <td>{{ entity.apeMat }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.nextel }}</td>
                <td>{{ entity.telefono1 }}</td>
                <td>{{ entity.telefono2 }}</td>
                <td>{{ entity.celular }}</td>
                <td>
                        <a href="{{ path('contacto_show', { 'id': entity.id }) }}" class="btn btn-default"><i class="fa fa-eye"></i>&nbsp;Ver</a>
                  
                        <a href="{{ path('contacto_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div><!-- table-responsive -->
    </div><!-- panel-body -->
</div><!-- panel -->
    {% endblock %}
