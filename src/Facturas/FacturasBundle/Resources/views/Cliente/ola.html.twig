{% block body %}
<div class="panel">
	<div class="panel-heading">
		<span class="panel-title">Nueva Direcciom</span>
	</div>
	<div class="panel-body">

		{{ form_start(edit_form) }}
			<div class="form-group">
				<div class="row">
					<label class="col-lg-3 control-label">Cliente</label>
					<div class="col-lg-5 mb10">
						{{ form_widget(edit_form.razonSocial, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>

		{{ form_start(form) }}
			{{ form_errors(form) }}

	   				
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Calle</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.calle) }}
							{{ form_widget(form.calle, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Numero Ext</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.numeroExt) }}
							{{ form_widget(form.numeroExt, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Numero Int</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.numeroInt) }}
							{{ form_widget(form.numeroInt, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Colonia</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.colonia) }}
							{{ form_widget(form.colonia, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Localidad</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.localidad) }}
							{{ form_widget(form.localidad, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Codigo Postal</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.codigoPostal) }}
							{{ form_widget(form.codigoPostal, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Pais</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.pais) }}
							{{ form_widget(form.pais, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Estado</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.estado) }}
							{{ form_widget(form.estado, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				<div class="form-group">
						<div class="row">
						<label class="col-lg-3 control-label">Municipio</label>
						<div class="col-lg-5 mb10">
							{{ form_errors(form.municipio) }}
							{{ form_widget(form.municipio, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
				</div>
				

			{{ form_widget(form._token) }}
			
			<div class="col-xs-12">
				<button class="btn btn-success" type="submit" id="sendform"><i class="fa fa-plus"></i>&nbsp;Crear</button>
			</div>

		</form>
	</div>
</div>
{% endblock %}