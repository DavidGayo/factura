{% extends '::base.html.twig' %}

{% block body -%}
<div class="panel">
    <div class="panel-heading">
        <span class="panel-title">Ver Cliente</span>
    </div>
    <div class="panel-body">

           {% for entity in entities %}

        <div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Razon Social:</b> </p>
        </div>
        <div>
            {{ entity.cliente.razonSocial }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>RFC:</b> </p>
        </div>
        <div>
            {{ entity.cliente.rfc }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Alias:</b> </p>
        </div>
        <div>
            {{ entity.cliente.alias }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Email:</b> </p>
        </div>
        <div>
            {{ entity.cliente.email }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Telefono:</b> </p>
        </div>
        <div>
            {{ entity.cliente.telefono }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Regimen Tributario:</b> </p>
        </div>
        <div>
            {{ entity.cliente.regimenTributario }}
        </div>
    </div>
</div>
<div class="form-group">
                        <div class="row">
        <div class="col-xs-12 col-lg-2">
            <p><b>Moneda:</b> </p>
        </div>
        <div>
            {{ entity.cliente.tipoMoneda }}
        </div>
    </div>
</div>

</div>
        
          

 <div class="panel-footer">
        <div class="inline">
            <a href="{{ path('direccioncliente_edit', { 'id': entity.cliente.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
            <a class="btn btn-warning" href="{{ path('cliente') }}"><i class="fa fa-arrow-left">&nbsp;</i>Regresar</a><br /><br />
             {{ form(delete_form) }}
        </div>
    </div>

    {% endfor %}  

</div>
{% endblock %}
{% block js %}
<script src="{{ asset('bundles/app/vendor/plugins/sparkline/jquery.sparkline.min.js') }}"></script>
<script src="{{ asset('bundles/app/vendor/plugins/highcharts/highcharts.js') }}"></script>
<script src="{{ asset('bundles/app/vendor/plugins/circles/circles.js') }}"></script>
<script src="{{ asset('bundles/app/assets/js/demo/charts/highcharts.js') }}"></script>
{% endblock js %}
    